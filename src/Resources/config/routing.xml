<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false"/>
        <service id="JsonApi\Router\RouteLoader" public="true">
            <argument type="service" id="Symfony\Component\HttpFoundation\RequestStack"/>
            <argument type="string"/>
            <argument type="string"/>
            <argument type="string"/>
            <argument type="string"/>
            <argument type="collection"/>
        </service>
        <service id="JsonApi\Router\ApiUrlGeneratorInterface" alias="JsonApi\Router\RouteLoader"/>
        <service id="JsonApi\Controller\SchemaController" public="true">
            <argument type="service" id="JsonApi\Metadata\RegisterInterface"/>
            <argument type="string">%json_api_path_prefix%</argument>
        </service>
    </services>
</container>
